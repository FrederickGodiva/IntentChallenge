<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_scroll_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scroll Image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/Button"
            android:layout_margin="14dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_open_youtube"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Open YouTube"
            app:layout_constraintTop_toBottomOf="@+id/btn_scroll_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/Button"
            android:layout_margin="14dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_call_911"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Call 911"
            app:layout_constraintTop_toBottomOf="@+id/btn_open_youtube"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/Button"
            android:layout_margin="14dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tiet_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/input_border"
            android:hint="Enter a number"
            android:inputType="number"
            app:layout_constraintTop_toBottomOf="@+id/btn_call_911"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="32dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_calculate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Calculate"
            app:layout_constraintTop_toBottomOf="@+id/tiet_number"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/Button"
            android:layout_margin="32dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>